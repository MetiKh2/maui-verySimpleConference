<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Conference.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    xmlns:pages="clr-namespace:Conference.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Schedule" Icon="tab_schedule.png">
            <ShellContent
        Title="Day 2"
        ContentTemplate="{DataTemplate pages:ScheduleDay2Page}"
        Route="ScheduleDay2" />
            <ShellContent
        Title="Day 1"
        ContentTemplate="{DataTemplate pages:ScheduleDay1Page}"
        Route="ScheduleDay1" />
        

        </Tab>
        <Tab Title="My Agenda" Icon="tab_agenda.png">
            <ShellContent
        Title="My Agenda"
        ContentTemplate="{DataTemplate pages:AgendaPage}"
        Route="MyAgenda" />
        </Tab>
        <Tab Title="Sponsers" Icon="tab_sponsors.png">
            <ShellContent
        Title="Sponsers"
        ContentTemplate="{DataTemplate pages:SponsorsPage}"
        Route="Sponsers" />
        </Tab>
    </TabBar>


</Shell>
